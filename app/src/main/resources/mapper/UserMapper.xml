<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.project.dao.UserDao">
    <select id="findAll" resultType="bitcamp.project.vo.User">
        SELECT * FROM user
    </select>

    <insert id="add" parameterType="bitcamp.project.vo.User" useGeneratedKeys="true">
        INSERT INTO user(email, password, nickname, path)
        values (#{email}, sha1(#{password}), #{nickname}, #{path})
    </insert>
</mapper>