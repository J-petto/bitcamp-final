<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitcamp.project.dao.MapDao">

    <resultMap id="ProvinceDTO" type="ProvinceDTO">
        <id column="location_id" property="id"/>
        <result column="first_name" property="province"/>
        <result column="count" property="count" />
    </resultMap>

    <resultMap id="ProvinceDTO" type="ProvinceDTO">
        <id column="location_id" property="id"/>
        <result column="first_name" property="province"/>
        <collection property="stories" ofType="">

        </collection>
    </resultMap>

    <select id="findAllProvinceAndCount" resultMap="ProvinceDTO" parameterType="int">
        SELECT l.location_id l.first_name, count(l.first_name) as count
        FROM location l inner join story s on l.location_id=s.location_id
        WHERE s.user_id=#{id}
    </select>

    <select id="findCityAndStory" resultMap="" parameterType="">

    </select>
</mapper>