    <select id="findAllProvinceAndCount" resultMap="ProvinceDTO" parameterType="int">
        SELECT l.location_id, l.first_name,
               COUNT(CASE WHEN LEFT(l.location_id, 2) = LEFT(s.location_id, 2) THEN 1 END) AS count
        FROM location l
            LEFT JOIN story s ON l.location_id=s.location_id AND s.user_id=#{id}
        GROUP BY l.first_name;
    </select>

    <select id="findCityAndStory" resultMap="CityDTO" parameterType="int">
        SELECT l.location_id, l.second_name,
               s.story_id, s.title, s.travel_date, s.location_detail, s.content, s.share,
               count(sl.story_id) as count
        FROM location l
            inner join story s on l.location_id=s.location_id
            inner join story_photo p on s.story_id=p.story_id
        WHERE s.user_id=19
    </select>
